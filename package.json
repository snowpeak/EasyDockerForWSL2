{
  "name": "easydockerforwsl2",
  "version": "1.0.0",
  "description": "EasyDocker for WSL2",
  "main": "tsc/electron/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon dist/main.js",
    "make_cert": "electron-builder create-self-signed-cert -p osscatnet",
    "build": "electron-builder"
  },
  "build": {
    "appId": "net.osscat.easydockerforwsl2",
    "productName": "EasyDockerForWSL2",
    "files": [
      "**/*",
      "!**/data/*",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resource/image/icon-multi.ico",
      "certificateFile": "private/osscatnet.pfx",
      "certificatePassword": "",
      "verifyUpdateCodeSignature": false,
      "publisherName": "osscatnet"
    },
    "nsis": {
      "installerIcon": "resource/image/icon-multi.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "snowpeak",
  "license": "ISC",
  "devDependencies": {
    "@types/adm-zip": "^0.4.34",
    "@types/archiver": "^5.3.1",
    "@types/node": "^17.0.5",
    "@types/sqlite3": "^3.1.8",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "eslint": "^8.6.0",
    "eslint-plugin-vue": "^8.2.0",
    "install": "^0.13.0",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "adm-zip": "^0.5.9",
    "archiver": "^5.3.0",
    "bootstrap": "^5.1.3",
    "core-js": "^3.20.2",
    "http": "0.0.1-security",
    "iconv-lite": "^0.6.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.41",
    "vue": "^3.2.26",
    "vue-i18n": "^9.2.0-beta.26"
  }
}
